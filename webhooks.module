}

/**
 * Implements hook_entity_create().
 */
function webhooks_entity_create(EntityInterface $entity, Webhook $webhook, WebhookService $service, Payload $payload) {
  $prepayload = NULL;

  switch ($webhook->getContentType()) {
    case 'application/json':
      $prepayload = \GuzzleHttp\json_encode(R::exportAll($entity));
      break;
    case 'application/xml':
      $prepayload = xmlrpc_encode($entity);
      break;
    case 'application/x-www-form-urlencoded':
      $prepayload = urlencode($entity);
      break;

    default:
      break;
  }

  switch ($entity->getEntityType()) {
    case 'user':
      $payload->setPayload($prepayload);
      $service->send($webhook, $payload);
      break;
    case 'node':
      $payload->setPayload($prepayload);
      $service->send($webhook, $payload);
      break;
    case 'comment':
      $payload->setPayload($prepayload);
      $service->send($webhook, $payload);
      break;

    default :
      _drupal_log_error('None supported entity_type was recognized.');
      break;
  }
}

