}

/**
 * Implements hook_entity_create().
 */
function webhooks_entity_create(EntityInterface $entity) {
  $prepayload = NULL;
  $payload = new Payload();
  $service = new WebhookService();

  switch ($service->getContentType()) {
    case 'application/json':
      $prepayload = \GuzzleHttp\json_encode($entity);
      break;
    case 'application/xml':
      $prepayload = xmlrpc_encode($entity);
      break;
    case 'application/x-www-form-urlencoded':
      $prepayload = urlencode($entity);
      break;

    default:
      break;
  }
  $payload->setPayload($prepayload);

  //$service->send($payload);
}

